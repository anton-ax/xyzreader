<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_padding"
    android:layout_marginLeft="@dimen/list_item_padding"
    android:layout_marginRight="@dimen/list_item_padding"
    android:layout_marginTop="@dimen/list_item_padding"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dynamic_image_height"
            android:background="@color/photo_placeholder" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/article_title_bottom_padding"
            android:paddingLeft="@dimen/article_title_padding"
            android:paddingRight="@dimen/article_title_padding"
            android:paddingTop="@dimen/article_title_padding"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/article_title_bottom_padding"
            android:paddingLeft="@dimen/article_title_padding"
            android:paddingRight="@dimen/article_title_padding"
            android:singleLine="true"
            android:textColor="@color/secondary_color" />

        <TextView
            android:id="@+id/article_author"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/article_title_padding"
            android:paddingLeft="@dimen/article_title_padding"
            android:paddingRight="@dimen/article_title_padding"
            android:singleLine="true"
            android:textColor="@color/secondary_color" />
    </LinearLayout>

</android.support.v7.widget.CardView>
